---
import BookingModal from '../components/BookingModal.astro';

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
}

const { title, description, keywords, ogImage } = Astro.props;

// Get the canonical URL from the current page path
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://elegantlashesbykatie.com');
const ogImageURL = ogImage || 'https://elegantlashesbykatie.com/images/ogimg.jpg';
