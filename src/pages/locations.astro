---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout
  title="Lash Extension Locations Orange County | Irvine, Tustin, Santa Ana, Costa Mesa"
  description="4 convenient Orange County lash extension salon locations: Irvine, Tustin, Santa Ana & Costa Mesa. Book your appointment at the location nearest you!"
>
  <Navigation />

  <main class="pt-20">
    <div class="bg-gradient-ghibli min-h-screen py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold font-playfair text-darktext mb-4">
            Our <span class="text-primary">Orange County</span> Locations
          </h1>
          <p class="text-xl text-mediumtext">
            4 convenient locations to serve you better
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Irvine Location -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8">
            <h3 class="text-2xl font-bold text-primary mb-4">Irvine</h3>
            <div class="space-y-2 text-darktext">
              <p><strong>Address:</strong> 15333 Culver Dr #220, Irvine, CA 92604</p>
              <p><strong>Phone:</strong> (657) 334-9919</p>
              <p><strong>Hours:</strong> Mon-Sun 9:00 AM - 7:00 PM</p>
            </div>
            <button class="mt-4 bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary/90 transition-colors">
              Book Irvine
            </button>
          </div>

          <!-- Tustin Location -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8">
            <h3 class="text-2xl font-bold text-primary mb-4">Tustin</h3>
            <div class="space-y-2 text-darktext">
              <p><strong>Address:</strong> 13112 Newport Ave #K, Tustin, CA 92780</p>
              <p><strong>Phone:</strong> (657) 334-9919</p>
              <p><strong>Hours:</strong> Mon-Sun 9:00 AM - 7:00 PM</p>
            </div>
            <button class="mt-4 bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary/90 transition-colors">
              Book Tustin
            </button>
          </div>

          <!-- Santa Ana Location -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8">
            <h3 class="text-2xl font-bold text-primary mb-4">Santa Ana</h3>
            <div class="space-y-2 text-darktext">
              <p><strong>Address:</strong> 3740 S Bristol St, Santa Ana, CA 92704</p>
              <p><strong>Phone:</strong> (657) 334-9919</p>
              <p><strong>Hours:</strong> Mon-Sun 9:00 AM - 7:00 PM</p>
            </div>
            <button class="mt-4 bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary/90 transition-colors">
              Book Santa Ana
            </button>
          </div>

          <!-- Costa Mesa Location -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8">
            <h3 class="text-2xl font-bold text-primary mb-4">Costa Mesa</h3>
            <div class="space-y-2 text-darktext">
              <p><strong>Address:</strong> 435 E 17th St #3, Costa Mesa, CA 92627</p>
              <p><strong>Phone:</strong> (657) 334-9919</p>
              <p><strong>Hours:</strong> Mon-Sun 9:00 AM - 7:00 PM</p>
            </div>
            <button class="mt-4 bg-primary text-white px-6 py-2 rounded-lg hover:bg-primary/90 transition-colors">
              Book Costa Mesa
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>