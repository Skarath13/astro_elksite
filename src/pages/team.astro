---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import TeamSection from '../components/TeamSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Expert Lash Technicians Orange County | Meet Our Team | Elegant Lashes by Katie"
  description="Meet our certified lash extension artists serving Orange County. 50+ years combined experience across 4 locations in Irvine, Tustin, Santa Ana & Costa Mesa."
  keywords="lash extension artists Orange County, certified lash technicians OC, expert lash artists Orange County, professional lash team OC, lash extension specialists"
>
  <Navigation />

  <main class="pt-20">
    <div class="bg-gradient-ghibli py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold font-playfair text-darktext mb-4">
          Our Expert Team
        </h1>
        <p class="text-xl text-mediumtext mb-8">
          Meet the certified lash artists behind Orange County's most beautiful lashes
        </p>
      </div>
    </div>

    <TeamSection />
  </main>

  <Footer />
</Layout>